<workflow-app xmlns="uri:oozie:workflow:0.4" name="backup.hdfs.${teamname}.<%= @jobname %>">

  <start to="backup-<%= @jobname %>"/>

  <!-- distcp backup -->
  <action name="backup-<%= @jobname %>">
    <distcp xmlns="uri:oozie:distcp-action:0.2">
      <job-tracker>${jobtracker}</job-tracker>
      <name-node>${namenode}</name-node>

      <!-- preserve metadata -->
      <arg>-ppugbtxc</arg>
      <arg>-update</arg>
      <arg>-bandwidth</arg>
      <arg>${bandwidth}</arg>
      <arg>-i</arg>

      <!-- source and destination -->
      <arg>${wf:conf("hdfs.src.namenode")}/${target}</arg>
      <arg>${wf:conf("hdfs.backup.root")}/${teamname}/${basename}</arg>
    </distcp>
      <ok to="end"/>
      <error to="fail"/>
  </action>

  <kill name="fail">
    <message>[${wf:errorMessage(wf:lastErrorNode())}]</message>
  </kill>

  <end name="end"/>
</workflow-app>
