# team name [A-Za-z_]+
teamname=<%= @group %>

# backup file / dir
target=<%= @path %>
basename=<%= @basename %>

# backup timeout in minutes (-1 = no timeout)
timeout=-1

# bandwidth per distcp mapper in MB/s
bandwidth=<%= @bandwidth %>

# source cluster
hdfs.src.namenode=<%= @hdfs %>

# storage cluster
hdfs.dest.namenode=<%= node[:backup][:namenode] %>
hdfs.backup.root=${hdfs.dest.namenode}/<%= node[:backup][:hdfs][:root].sub("/", "") %>

# team properties
team.backup.coordinator=${hdfs.backup.root}/${teamname}/.oozie/coordinator-<%= @jobname %>.xml
team.backup.workflow=${hdfs.backup.root}/${teamname}/.oozie/workflow-<%= @jobname %>.xml

# backup schedule (ISO date)
team.backup.start=<%= @startdate %>
team.backup.end=<%= @enddate %>

# oozie properties
oozie.use.system.libpath=true
# oozie.wf.application.path=${team.backup.workflow}
oozie.coord.application.path=${team.backup.coordinator}
oozie.launcher.mapreduce.job.hdfs-servers=${hdfs.src.namenode},${hdfs.dest.namenode}

# hadoop properties
namenode=<%= node[:backup][:namenode] %>
jobtracker=<%= node[:backup][:jobtracker] %>
